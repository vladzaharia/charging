---
import Background from '../../components/background/Background.astro';
import Backdrop from '../../components/background/Backdrop.astro';

// The auth callback page will handle the redirect and close the window
---

<Background>
  <Backdrop class="flex items-center justify-center min-h-screen">
    <div class="text-center">
      <h1 class="text-2xl font-display text-charge-blue mb-4">Signing you in...</h1>
      <p class="text-slate-400">You can close this window once you're signed in.</p>
    </div>
  </Backdrop>
</Background>

<script>
  import { supabase } from '../../lib/supabase';

  // Handle the OAuth callback
  const handleCallback = async () => {
    try {
      const { error } = await supabase.auth.getSession();
      if (error) throw error;

      // Close the window if it was opened by OAuth
      if (window.opener) {
        window.opener.postMessage({ type: 'SUPABASE_AUTH_COMPLETE' }, window.location.origin);
        window.close();
      } else {
        // If opened directly, redirect to home
        window.location.href = '/';
      }
    } catch (error) {
      console.error('Error:', error);
      window.location.href = '/';
    }
  };

  handleCallback();
</script>
